{{#each service.datasources as |datasource| ~}}
{{define "prefix" (concat
  'spring'
  (if (eq datasource.name 'default') '' (concat '.' (lower-snake datasource.name)))
  '.r2dbc'
) ~}}
{{prefix}}.url=
{{prefix}}.username=
{{prefix}}.password=
{{prefix}}.pool.initial-size=5
{{prefix}}.pool.max-size=10
{{prefix}}.pool.max-idle-time=1m
{{prefix}}.pool.validation-query=SELECT 1
{{/each}}
{{#each service.rest_clients as |client| ~}}
{{define "prefix" (concat 'rest_client.' (lower-snake client.name)) ~}}
{{prefix}}.base_url=
{{prefix}}.api_key=
{{/each}}
{{#each service.search_engine_clients as |client| ~}}
{{define "prefix" (concat 'search_engine_client.' (lower-snake client.name)) ~}}
{{prefix}}.endpoints=
{{/each}}